//一维差分数组
#include <iostream>
#include <vector>
using namespace std;

int N=100100;
vector<int> a(N,0),b(N,0);
int main(){
    int m=0,n=0;
    int x;
    cin>>n>>m;
    for(int i=1;i<=n;i++){
        cin>>x;
        a[i]=x;//填充a数组
        b[i]=a[i]-a[i-1];//填充b数组（差分数组）（a是b的前n项和）
    }
    int l=0,r=0,c=0;
    while(m--){
        cin>>l>>r>>c;
        b[l]+=c;
        b[r+1]-=c;//确保闭区间[l,r]之间的数字，所以需要r+1；
    }
    for(int i=1;i<=n;i++){
        a[i]=a[i-1]+b[i];//利用前n项和数列的性质重新填充a数组
        cout<<a[i]<<" ";
    }

    return 0;
}
